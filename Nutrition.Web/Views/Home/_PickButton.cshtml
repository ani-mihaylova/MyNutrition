@using (Html.BeginForm("PickRecipe", "Recipe", FormMethod.Get, new { @class = "form-horizontal" }))
{
    <div class="form-group">
        <div class="col-md-6">
            <button type="submit" class="btn btn-primary text-center" id="pickBtn">Какво да ям? 
            <p><small>Избери рецепта от моите рецепти</small></p></button>
        </div>
        <div class="checkbox col-md-6">
            <label>
                <input type="checkbox" id="fromAll" name="fromAll">Избери от всички рецепти
            </label>
        </div>       
    </div>
}
