@model ICollection<Nutrition.Web.ViewModels.Homes.HomePageRecipeViewModel>
@{
    ViewBag.Title = "Home Page";
}

<div class="row">
    <div class="col-md-5">
        <div class="row" id="searchBox">
            @Html.Partial("_Search")
        </div>
        <div class="row">
            @Html.Partial("_PickButton")
        </div>
    </div>
    <div class="col-md-7">
        <div id="myCarousel" class="carousel slide" data-ride="carousel">

            <!-- Carousel items -->
            <div class="carousel-inner">
                @for (int i = 0; i < 6; i++)
                {
                    if (i == 0)
                    {
                <div class="active item">
                    <h2><img src="~/Images/Home/img@(i+1).jpg" /></h2>
                </div>
                    }
                    else
                    {
                <div class="item">
                    <h2><img src="~/Images/Home/img@(i+1).jpg" /></h2>
                </div>
                    }
                }
            </div>
            <!-- Carousel nav -->
            <a class="carousel-control left" href="#myCarousel" data-slide="prev">
                <span class="glyphicon glyphicon-chevron-left"></span>
            </a>
            <a class="carousel-control right" href="#myCarousel" data-slide="next">
                <span class="glyphicon glyphicon-chevron-right"></span>
            </a>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-md-6">
        <h3>Топ рецепти</h3>
        @foreach (var recipe in Model)
        {
            <div class="panel panel-success">
                <div class="panel-heading">
                    <h3 class="panel-title">@recipe.Title</h3>
                </div>
                <div class="panel-body">
                    @if (recipe.ImageId != null)
                    {
                        <img src="@Url.Action("Image", "Recipe", new { id = recipe.ImageId.Value })" alt="@recipe.Title" class="img-responsive" width="300" />
                    }
                    Рейтинг @recipe.Rating
                </div>
            </div>
        }
    </div>
    <div class="col-md-6">
        <h3>Моите топ рецепти</h3>
        @{Html.RenderAction("UserTopRecipes", "Home");}
    </div>

</div>

@section styles{
    <style type="text/css">
        h2 {
            margin: 0;
            color: #666;
            font-size: 52px;
            font-family: "trebuchet ms", sans-serif;
        }

        .item {
            text-align: center;
        }

        .carousel {
            margin-top: 20px;
            width: 600px;
            height: 388px;
        }

        #searchBox {
            margin-top: 20px;
        }

        #submitBtn {
            margin-left: -20px;
        }
    </style>
}