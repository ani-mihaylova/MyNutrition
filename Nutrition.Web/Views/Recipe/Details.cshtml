@model Nutrition.Web.ViewModels.Recipes.DetailsRecipeViewModel
@{
    ViewBag.Title = "Details";
}

<div class="jumbotron">
    <h1 class="row">@Model.Title</h1>
    <div class="row">
        <div class="col-md-4">
            @if (Model.ImageId != null)
            {
                <img src="@Url.Action("Image", "Recipe", new { id = Model.ImageId.Value })" alt="@Model.Title" class="img-responsive" width="300" />
            }
        </div>
        <div class="col-md-8">
            @Model.Ingredients
        </div>
    </div>
    <div class="row">
        @Model.Description
    </div>
    <div class="row">
        @foreach (var tag in Model.Tags)
        {
            <a href="#" class="btn btn-default disabled">@tag</a>
        }
    </div>
    <div class="row">
        @{Html.RenderAction("ListComments", "Comment", new { recipeId = Model.ID });}
    </div>
    <div class="row">
        @{Html.RenderAction("Create", "Comment", new { recipeId = Model.ID });}
    </div>
</div>
