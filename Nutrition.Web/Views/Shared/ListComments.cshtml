@model ICollection<Nutrition.Web.ViewModels.Comments.CommentDetailsViewModel>

@{
    ViewBag.Title = "ListComments";
}
<div class="col-md-9">
    @if (Model.Count!=0)
    {
        foreach (var comment in Model)
        {
            <div class="panel panel-default">
                <div class="panel-heading">@comment.Username</div>
                <div class="panel-body">
                    @comment.Content
                </div>
            </div>
        }
    }
</div>
